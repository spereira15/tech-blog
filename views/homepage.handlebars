{{!-- Loop over each object in the blogPosts array --}}
{{#each posts as |post| }}
<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>
      <div class="card-body">
        <p>
          {{post.content}}
        </p>
      </div>
    </div>
  </div>
</div>
{{/each}}
