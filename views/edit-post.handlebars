<div class="container">
  <h2>Edit Post</h2>
  <form class="form edit-post-form" action="/api/posts/update-post/{{id}}" method="POST">
    <div class="form-group">
      <label for="post-title">Post Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}" />
    </div>
    <div class="form-group">
      <label for="post-content">Post Content:</label>
      <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Save Changes</button>
    </div>
  </form>
</div>